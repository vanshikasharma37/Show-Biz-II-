@model IEnumerable<ViewModel.EpisodeWithShowNameViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="h1 fw-normal">Episode List</h1>
<hr/>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SeasonNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EpisodeNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AirDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clerk)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.ShowId)
        </th>*@
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <div>@Html.DisplayFor(modelItem => item.Name)</div>
            <div class="fst-italic">@Html.DisplayFor(modelItem => item.Show.Name)</div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SeasonNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EpisodeNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AirDate)
        </td>
        <td class="w-30">
            <div class="w-50">
                <img src="@item.ImageUrl" alt="Image" class="rounded img-thumbnail w-75" />
            </div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Clerk)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.ShowId)
        </td>*@
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
            @Html.ActionLink("Details", "Details", new { id=item.Id })
            @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
